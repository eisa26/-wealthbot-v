<table class="table suggested-portfolio-finaccounts shadow">
    <thead>
        <tr>
            {% set employer_financial_institurion = account.financialInstitution | split('(') %}
            <th colspan="3">{{ employer_financial_institurion[1] | trim(' )') }} {{ account.typeName }} Investment Options</th>
        </tr>
        <tr>
            <th>Symbol</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        {% if account is not empty %}
            {% for outside_fund in account.accountOutsideFunds %}
                <tr>
                    <td>{{ outside_fund.securityAssignment.security.symbol }}</td>
                    <td>{{ outside_fund.securityAssignment.security.name }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="2">No funds.</td>
            </tr>
        {% endif %}
    </tbody>
</table>
