{% if (breadcrumbs | length > 0) %}
    <div>
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li>
                    <a href="{{ breadcrumb.url }}">{{ breadcrumb.name }}</a>
                    {% if (loop.last == false) %}
                        <span class="divider">/</span>
                    {%  endif %}
                </li>
            {% endfor %}
        </ul>
    <hr>
    </div>
{% endif %}