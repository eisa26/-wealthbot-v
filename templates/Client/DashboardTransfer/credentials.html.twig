{% extends '/Client/Transfer/credentials.html.twig' %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/client/client.transfer.js') }}"></script>
{% endblock %}
{% block header_row %}{% endblock %}
{% block bottom_content %}{% endblock %}

{% block main_content %}
    <div>
        <h1>Need Credentials</h1>

        {% set group = account.groupName %}
        {% set type = account.groupName %}
        {% set employer_financial_institurion = account.financialInstitution | split('(') %}

        <div class="row">
            <div class="span">
                <strong>Type:</strong> {{ type }}
            </div>
            <div class="span">
                <strong>Estimated Value:</strong> ${{ account.value|number_format(2, '.', ',') }}
            </div>
            <div class="span">
                <strong>Monthly Contributions:</strong> ${{ account.monthlyContributions|number_format(2, '.', ',') }}
            </div>
        </div>

        <br />

        {% include '/Client/Transfer/_retirement_account_funds_list.html.twig' with { 'account': account } %}

        {% include
        '/Client/DashboardTransfer/_retirement_account_credentials_form.html.twig' with
        { 'account': account, 'form': form }
        %}
    </div>
{% endblock %}