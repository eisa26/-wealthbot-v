{% extends '/Client/Transfer/index.html.twig' %}

{% block top_content %}
    {{ render(controller('App\\Controller\\Client\\TransferController:progressMenu', { 'account': account, 'step': 'personal' })) }}
{% endblock %}

{% block main_content %}
    <form action="{% block form_action %}{{ path('rx_client_transfer_personal', { 'account_id': account.id }) }}{% endblock %}" method="post" class="acc-form" enctype="multipart/form-data" data-presave="true" data-save="true">
        <h4>Personal - Primary Applicant</h4>
        <div class="form-group row">
            <div class="span">
                {{ form_label(form.citezen) }}
                {{ form_errors(form.citezen) }}
                {{ form_widget(form.citezen, { 'attr': { 'class': 'input-medium' } }) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="span">
                <label>Social Security Number</label>
                <div>
                    {{ form_errors(form.ssn_tin_1) }}
                    {{ form_errors(form.ssn_tin_2) }}
                    {{ form_errors(form.ssn_tin_3) }}
                </div>
                <div class="row">
                    {{ form_widget(form.ssn_tin_1, { 'attr': { 'class': 'col-3', 'placeholder': '###' } }) }}
                    {{ form_widget(form.ssn_tin_2, { 'attr': { 'class': 'col-2', 'placeholder': '##' } }) }}
                    {{ form_widget(form.ssn_tin_3, { 'attr': { 'class': 'col-4', 'placeholder': '####' } }) }}
                </div>

            </div>
        </div>

        {% include '/Client/Transfer/_employment_information_form_type_fields.html.twig' with {'form': form} %}

        <div class="form-group row">
            {{ form_rest(form) }}
        </div>
        <div class="form-actions">
            <a href="{% block back_url %}{{ path('rx_client_transfer_back', {'account_id': account.id, 'action': 'personal'}) }}{% endblock %}" class="btn btn-inverse">Back </a>
            <input type="submit" class="btn btn-primary"  name="continue" value="Continue" />
        </div>
    </form>
{% endblock %}