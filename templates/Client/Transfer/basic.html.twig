{% extends '/Client/Transfer/index.html.twig' %}

{% block top_content %}
    {{ render(controller('App\\Controller\\Client\\TransferController:progressMenu', { 'account': account, 'step': 'basic' })) }}
{% endblock %}

{% block main_content %}
    <form action="{% block form_action %}{{ path('rx_client_transfer_basic', { 'account_id': account.id }) }}{% endblock %}" method="post" class="acc-form form-horizontal" data-presave="true" data-save="true">
        <h4>Basics - Primary Applicant</h4>
        <div class="form-group">
                {{ form_label(form.first_name, 'First Name', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.first_name) }}
                {{ form_widget(form.first_name, { 'attr': { 'class': 'input-small' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.middle_name, 'Middle Name', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.middle_name) }}
                {{ form_widget(form.middle_name, { 'attr': { 'class': 'input-small' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.last_name, 'Last Name', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.last_name) }}
                {{ form_widget(form.last_name, { 'attr': { 'class': 'input-small' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.street, 'Street Address', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.street) }}
                {{ form_widget(form.street, { 'attr': { 'class': 'input-xlarge' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.city, label|default(null), { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.city) }}
                {{ form_widget(form.city, { 'attr': { 'class': 'input-small' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.state, label|default(null), { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.state) }}
                {{ form_widget(form.state, { 'attr': { 'class': 'input-medium' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.zip, label|default(null), { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.zip) }}
                {{ form_widget(form.zip, { 'attr': { 'class': 'input-mini' } }) }}
                <span class="help-inline">United States</span>
            </div>
        </div>
        <div class="row">
            <div class="col-5">
                {{ form_errors(form.is_different_address) }}
                <label class="checkbox">
                    {{ form_widget(form.is_different_address) }} {{ form.is_different_address.vars.label }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col-7 mailing-address">
                <div class="form-group mailing-address-block" style="display:none;">
                    <div class="col-6">
                        {{ form_label(form.mailing_street, 'Mailing Street') }}
                        {{ form_errors(form.mailing_street) }}
                        {{ form_widget(form.mailing_street, { 'attr': { 'class': 'col-5' } }) }}
                    </div>

                    <div class="span">
                        {{ form_label(form.mailing_city, 'Mailing City') }}
                        {{ form_errors(form.mailing_city) }}
                        {{ form_widget(form.mailing_city, { 'attr': { 'class': 'input-small' } }) }}
                    </div>
                    <div class="span">
                        {{ form_label(form.mailingState, 'Mailing State') }}
                        {{ form_errors(form.mailingState) }}
                        {{ form_widget(form.mailingState, { 'attr': { 'class': 'input-medium' } }) }}
                    </div>
                    <div class="span">
                        {{ form_label(form.mailing_zip, 'Mailing Zip Code') }}
                        {{ form_errors(form.mailing_zip) }}
                        {{ form_widget(form.mailing_zip, { 'attr': { 'class': 'input-mini' } }) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.birth_date, 'Birth Date', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.birth_date) }}
                {{ form_widget(form.birth_date, { 'attr': { 'placeholder': 'MM' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.phone_number, 'Phone Number', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.phone_number) }}
                {{ form_widget(form.phone_number, { 'attr': { 'class': 'input-medium', 'placeholder': '(###) ###-####', 'data-mask-type': 'phone' } }) }}
            </div>
        </div>
        <div class="form-group">
                {{ form_label(form.email, 'Email Address', { 'label_attr': {'class': 'control-label'}}) }}
            <div class="controls">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, { 'attr': { 'class': 'col-3' } }) }}
            </div>
        </div>

        <div class="row">
            {{ form_rest(form) }}
        </div>

        <div class="form-actions">
            {% block form_buttons %}
                <a href="{% block back_url %}{{ path('rx_client_transfer_back', {'account_id': account.id, 'action': 'basic'}) }}{% endblock %}" class="btn btn-inverse">Back </a>
                <input type="submit" class="btn btn-primary"  name="continue" value="Continue" />
            {% endblock %}
        </div>
    </form>
{% endblock %}
