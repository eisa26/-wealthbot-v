<form method="post" action="{{
        path('rx_ria_dashboard_household_settings_contact', {
            'client_id': app.request.get('client_id')
        })
    }}">

    {{ form_errors(form) }}
    <table>
        <tr>
            <td>{{ form_label(form.street) }}</td>
            <td>
                {{ form_widget(form.street) }}
                {{ form_errors(form.street) }}
            </td>
        </tr>
        <tr>
            <td>{{ form_label(form.city) }}</td>
            <td>
                {{ form_widget(form.city) }}
                {{ form_errors(form.city) }}
            </td>
        </tr>
        <tr>
            <td>{{ form_label(form.state) }}</td>
            <td>
                {{ form_widget(form.state) }}
                {{ form_errors(form.state) }}
            </td>
        </tr>
        <tr>
            <td>{{ form_label(form.zip) }}</td>
            <td>
                {{ form_widget(form.zip) }}
                {{ form_errors(form.zip) }}
            </td>
        </tr>
    </table>
    <h2>Mailing Address</h2>
    <div id="mailing-address">
        {{ form_row(form.mailingStreet) }}
        <br/>

        <div class="clearfix">
            <div class="pull-left">
                {{ form_row(form.mailingCity) }}
            </div>
            <div class="pull-left">
                {{ form_row(form.mailingState) }}
            </div>
            <div class="pull-left">
                {{ form_row(form.mailingZip) }}
            </div>
        </div>
        <br/>

        <br/>
        <div class="clearfix">
            <div class="pull-left">
                {{ form_row(form.email) }}
            </div>
            <div class="pull-left">
                {{ form_row(form.phoneNumber) }}
            </div>
        </div>
    </div>

    {{ form_rest(form) }}
</form>
