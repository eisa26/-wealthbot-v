{% block flash_messages %}
    {% for type, flashMessages in app.session.flashbag.all() %}
        {% for flashMessage in flashMessages %}
            <div class="alert alert-{{ type }}">
                {{ flashMessage }}
                <a class="close" data-dismiss="alert" href="#">&times;</a>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

<h3>Reset My Password</h3>

<form action="{{ path('rx_ria_change_profile_update_password') }}" method="post">
    <fieldset>
        <div class="form-group">
            {{ form_label(form.current_password, 'Old Password:', { 'label_attr': { 'class': 'control-label' } }) }}
            {{ form_errors(form.current_password) }}
            {{ form_widget(form.current_password) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'New Password:', { 'label_attr': { 'class': 'control-label' } }) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'Confirm New Password:', { 'label_attr': { 'class': 'control-label' } }) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second) }}
        </div>

        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary btn-ajax">Submit</button>
    </fieldset>
</form>